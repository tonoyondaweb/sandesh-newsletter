---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
	title: string;
	variant?: "regular" | "important";
}

const { class: className, title, variant = "regular", ...attr } = Astro.props;
---

<li>
	<a
		class:list={[
			"px-3 transition-colors hover:opacity-75 transition-opacity",
			className,
		]}
		{...attr}
	>
		{title}
	</a>
</li>
